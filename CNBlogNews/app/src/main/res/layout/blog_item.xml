<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/blogs_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="博客标题"
        android:textColor="#0000FF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/blogs_summary_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="博客摘要" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="By："
            android:textColor="#EE9A00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/blogers_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业大师"
            android:textColor="#EE9A00"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/blogs_published_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="2016年06月20日 08:17:15"
        android:textColor="#66CD00"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/blogs_comments_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:text="12345678" />

        <ImageView
            android:id="@+id/blogs_comments_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/blogs_comments_tv"
            android:src="@mipmap/comment_32" />

        <TextView
            android:id="@+id/blogs_views_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/blogs_comments_img"
            android:text="12345678" />

        <ImageView
            android:id="@+id/blogs_views_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/blogs_views_tv"
            android:src="@mipmap/looked" />
    </RelativeLayout>

</LinearLayout>